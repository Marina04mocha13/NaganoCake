<div class="container-fluid m-sm-5 p-2">
  <h1>注文履歴詳細</h1>
  <div class="row">
    <div class="col">
      <h6>注文情報</h6>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>注文日</td>
            <td><%= l @order.created_at %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= @order.address_display %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col">
      <h6>請求情報</h6>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>商品合計</td>
            <td><%= (@order.total_payment - @order.shipping_cost).to_s %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= @order.shipping_cost %></td>
          </tr>
          <tr>
            <td>請求金額合計</td>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <h6>注文内容</h6>
    <table class="table table-bordered">
      <tbody>
        <tr>
          <td>商品</td>
          <td>単価 (税込み)</td>
          <td>個数</td>
          <td>小計</td>
        </tr>
        <% @order.order_details.each do |order_detail| %>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.add_tax_price %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.total_price %></td>
          </tr>
        <% end %>
    </table>
  </div>
</div>