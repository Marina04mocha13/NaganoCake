<div class="container-fluid m-sm-5 p-2">
  <h1>注文履歴一覧</h1>
  <table class="table table-hover table-inverse">
    <thead>
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to order_path(order.id) do %>
             <%= l order.created_at %>
            <% end %>
          </td>
          <td><%= order.address_display %></td>
          <td>
            <% order.order_details.each do |order_detail| %>
              <%= order_detail.item.name %>
            <% end %>
          </td>
          <td><%= order.total_payment %></td>
          <td><%= order.status_i18n %></td>
          <td><%= link_to "表示する", order_path(order.id), class: 'btn btn-primary' %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
</div>