<table class="table">
  <thead>
    <tr>
      <th class="border-bottom">ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
      <tr>
        <td>
          <%= link_to items_path(genre_id: genre.id), class: "text-dark" do %>
            <%= genre.name %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>