<div class="container-fluid m-sm-5 p-3">
  <% if flash.now[:notice] %>
       <p id="notice">
           <%= flash.now[:notice] %>
       </p>
  <% end %>
  <h1>配送先登録/一覧</h1>
  <%= form_with model: @address do |f| %>
    <div class="form-group row">
      <label for="postal_code" class="col-sm-2 col-form-label">郵便番号(ハイフンなし)</label>
      <div class="col-auto"><%= f.text_field :postal_code %></div>
    </div>

    <div class="form-group row">
      <label for="address" class="col-sm-2 col-form-label">住所</label>
      <div class="col-sm-10"><%= f.text_field :address %></div>
    </div>

    <div class="form-group row">
      <label for="name" class="col-sm-2 col-form-label">宛名</label>
      <div class="col-auto"><%= f.text_field :name %></div>
      <div class="col-auto"><%= f.submit "新規登録", class: 'btn btn-success' %></div>
    </div>
  <% end %>

  <table class="table table-bordered">
    <thead>
      <tr>
        <td>郵便番号</td>
        <td>住所</td>
        <td>宛名</td>
        <td colspan="2"></td>
      </tr>
    </thead>
    <tbody>
      <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to edit_address_path(address.id), class: 'btn btn-sm btn-success' do %>
              編集する
            <% end %>
          </td>
          <td>
            <%= link_to address_path(address.id), method: :delete, class: 'btn btn-sm btn-danger' do %>
              削除する
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>