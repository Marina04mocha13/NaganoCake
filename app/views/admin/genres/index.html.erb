<h1>ジャンル一覧・追加</h1>
<div class="form-group row">
  <%= form_with model: @genre do |f| %>
    <label for="genre" class="col-sm-2 col-form-label">ジャンル名</label>
    <%= f.text_field :name %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  <% end %>
</div>

<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th>ジャンル</th>
      <th></th>
    </tr>
  <tbody>
      <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td>
          <%= link_to edit_admin_genre_path(genre.id), class: 'btn btn-sm btn-success' do %>
            編集する
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
</table>