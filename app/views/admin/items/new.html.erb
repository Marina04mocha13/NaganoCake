<h1>商品新規登録</h1>
  <%= form_with model: [:admin, @item] do |f| %>
  <div class="form-group row">
    <label for="image" class="col-sm-2 col-form-label">商品画像</label>
      <%= f.file_field :image, accept: "image/*" %>
  </div>
  <div class="form-group row">
    <label for="item_name" class="col-sm-2 col-form-label">商品名</label>
      <%= f.text_field :name %>
  </div>
  <div class="form-group row">
    <label for="item_introduction" class="col-sm-2 col-form-label">商品説明</label>
      <%= f.text_area :introduction %>
  </div>
  <div class="form-group row">
    <label for="genre" class="col-sm-2 col-form-label">ジャンル</label>
    <%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択してください--" %>
  </div>
  <div class="form-group row">
    <label for="price" class="col-sm-2 col-form-label">税抜価格</label>
    <%= f.text_field :price %>円
  </div>
  <div class="form-group row">
    <label for="status" class="col-sm-2 col-form-label">販売ステータス</label>
    <%= f.radio_button :is_active, 'true' %><%= f.label :is_active, '販売中', value: true %>
    <%= f.radio_button :is_active, 'false' %><%= f.label :is_active, '販売停止中', value: false %>
  </div>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
  <% end %>