<h1>商品詳細</h1>
<div class="container mt-1">
  <div class="row">
    <div class="col">
      <%= image_tag @item.get_item_image, size: "300x200" %>
    </div>
    <div class="col">
      <table class="table">
        <tbody>
          <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @item.introduction %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @item.genre.name %></td>
          </tr>
          <tr>
            <td>税込価格<br>(税抜価格)</td>
            <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price %>)円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td><%= @item.is_active ? '販売中' : '売り切れ' %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to edit_admin_item_path(@item.id), class: 'btn btn-sm btn-success' do %>
            編集する
      <% end %>
    </div>
  </div>
</div>
