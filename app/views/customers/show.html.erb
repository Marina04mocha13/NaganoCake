<div class="container-fluid m-sm-5 p-2">
  <div class="row mb-2">
    <h1>マイページ</h1>
  </div>
  <div class="row">
    <h5>登録情報  <%= link_to "編集する", mypage_edit_path, class: 'btn btn-success' %></h5>
  </div>
  <div class="row">
    <div class="col-10">
      <table class="table table-bordered border-dark">
        <tbody>
          <tr>
            <td class="col-2 table-secondary">氏名</td>
            <td><%= @customer.last_name %> <%= @customer.first_name %></td>
          </tr>
          <tr>
            <td class="table-secondary">カナ</td>
            <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
          </tr>
           <tr>
            <td class="table-secondary">郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>
           <tr>
            <td class="table-secondary">住所</td>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <td class="table-secondary">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <td class="table-secondary">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <h2>配送先 <%= link_to "一覧を見る", addresses_path, class: 'btn btn-primary' %></h2>
  <h2>注文履歴 <%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %></h2>
</div>