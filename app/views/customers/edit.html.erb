<h1>会員情報編集</h1>
<%= form_for @customer, url: mypage_path do |f| %>
  <div class="form-group row">
    <label for="name" class="col-sm-2 col-form-label">氏名</label>
    <%= f.text_field :last_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="form-group row">
    <label for="name_kana" class="col-sm-2 col-form-label">フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="form-group row">
    <label for="postal_code" class="col-sm-2 col-form-label">郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>

  <div class="form-group row">
    <label for="address" class="col-sm-2 col-form-label">住所</label>
    <%= f.text_field :address %>
  </div>

  <div class="form-group row">
    <label for="telephone_number" class="col-sm-2 col-form-label">電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="form-group row">
    <label for="email" class="col-sm-2 col-form-label">メールアドレス</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="form-group row">
    <label for="button" class="col-sm-2 col-form-label"></label>
    <div class="col"><%= f.submit "編集内容を保存", class: 'btn btn-primary' %></div>
    <div class="col"><%= link_to "退会する", unsubscribe_path, class: 'btn btn-danger' %></div>
  </div>
<% end %>